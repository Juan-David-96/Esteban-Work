<h2>Editar Perfil</h2>

<div class="card shadow-lg w-50 mx-auto p-4">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f| %>
    
    <div class="mb-3">
      <%= f.label :name, "Nombre", class: "form-label fw-bold" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Correo Electr칩nico", class: "form-label fw-bold" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Nueva Contrase침a (opcional)", class: "form-label fw-bold" %>
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Confirmar Nueva Contrase침a", class: "form-label fw-bold" %>
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password, "Contrase침a Actual (requerida para cambios)", class: "form-label fw-bold" %>
      <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
    </div>

    <div class="text-center">
      <%= f.submit "Actualizar Perfil", class: "btn btn-primary" %>
    </div>
    
  <% end %>

  <div class="text-center mt-3">
    <%= link_to "Cancelar", root_path, class: "btn btn-outline-secondary" %>
  </div>
</div>
